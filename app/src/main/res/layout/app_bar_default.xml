<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".Activity.activity_main"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:smart_font="@string/fontBlack"
                android:text="Notification"
                android:visibility="visible"/>

            <RelativeLayout
                android:id="@+id/wrapperToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="Muhamad Hafizh"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:textColor="@color/putih"
                    android:textSize="16sp"
                    app:smart_font="@string/fontBold" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/nimOrNip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4314010034"
                    android:layout_below="@id/nama"
                    android:textColor="@color/putih"
                    app:smart_font="@string/fontReguler" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/spasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spasi"
                    android:layout_toEndOf="@id/nimOrNip"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/nama"
                    android:textColor="@color/putih"
                    app:smart_font="@string/fontReguler" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/kelasOrStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TI 8 Reguler"
                    android:layout_toEndOf="@id/spasi"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/nama"
                    android:textColor="@color/putih"
                    app:smart_font="@string/fontReguler" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_default" />

</android.support.design.widget.CoordinatorLayout>
